<script>
  import { supabase } from '../lib/supabase/client';
  
  // Handle OAuth callback tokens when Supabase redirects to site_url instead of redirect_to
  // This happens when accessing from network IP but Supabase redirects to localhost
  async function handleOAuthTokens() {
    const hash = window.location.hash;
    const params = new URLSearchParams(hash.substring(1));
    
    // Check if we have OAuth tokens in the URL hash
    const accessToken = params.get('access_token');
    const refreshToken = params.get('refresh_token');
    const error = params.get('error');
    const errorDescription = params.get('error_description');
    
    // Get the saved origin from localStorage
    const savedOrigin = localStorage.getItem('oauth_redirect_origin');
    console.log('[Index] Saved origin from localStorage:', savedOrigin);
    console.log('[Index] Current origin:', window.location.origin);
    
    if (error) {
      console.error('[Index] OAuth error:', error, errorDescription);
      // Clean the URL
      window.history.replaceState({}, document.title, window.location.pathname);
      localStorage.removeItem('oauth_redirect_origin');
      return;
    }
    
    if (accessToken && refreshToken) {
      console.log('[Index] Detected OAuth tokens in URL, processing...');
      
      try {
        // Set the session using the tokens
        const { data, error: sessionError } = await supabase.auth.setSession({
          access_token: accessToken,
          refresh_token: refreshToken,
        });
        
        if (sessionError) {
          console.error('[Index] Error setting session:', sessionError);
        } else {
          console.log('[Index] Session established successfully');
          // Clean the URL
          window.history.replaceState({}, document.title, window.location.pathname);
          localStorage.removeItem('oauth_redirect_origin');
          
          // Check if we need to redirect back to the original origin (network IP)
          if (savedOrigin && savedOrigin !== window.location.origin) {
            console.log('[Index] Redirecting back to original origin:', savedOrigin);
            // Redirect to the saved origin with the session
            window.location.href = `${savedOrigin}/feed`;
          } else {
            // Redirect to feed on the same origin
            window.location.href = '/feed';
          }
          return;
        }
      } catch (err) {
        console.error('[Index] Exception setting session:', err);
      }
    }
    
    // Also check for code parameter (PKCE flow)
    const code = params.get('code');
    if (code) {
      console.log('[Index] Detected OAuth code in URL, exchanging...');
      try {
        const { data, error: exchangeError } = await supabase.auth.exchangeCodeForSession(code);
        if (exchangeError) {
          console.error('[Index] Error exchanging code:', exchangeError);
        } else {
          console.log('[Index] Code exchanged successfully');
          // Clean the URL
          window.history.replaceState({}, document.title, window.location.pathname);
          localStorage.removeItem('oauth_redirect_origin');
          
          // Check if we need to redirect back to the original origin (network IP)
          if (savedOrigin && savedOrigin !== window.location.origin) {
            console.log('[Index] Redirecting back to original origin:', savedOrigin);
            // Redirect to the saved origin with the session
            window.location.href = `${savedOrigin}/feed`;
          } else {
            // Redirect to feed on the same origin
            window.location.href = '/feed';
          }
          return;
        }
      } catch (err) {
        console.error('[Index] Exception exchanging code:', err);
      }
    }
  }
  
  // Run OAuth handler on page load
  handleOAuthTokens();
  
  // Mobile menu toggle
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('active');
  });

  // Close mobile menu when clicking a link
  const mobileLinks = document.querySelectorAll('.mobile-link');
  mobileLinks.forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.remove('active');
    });
  });

  // Smooth scroll for anchor links
  document.querySelectorAll('a[href^="#"]').forEach((anchor) => {
    if (!(anchor instanceof HTMLAnchorElement)) return;
    anchor.addEventListener('click', (e) => {
      e.preventDefault();
      const href = anchor.getAttribute('href');
      if (!href) return;
      const target = document.querySelector(href);
      if (target instanceof HTMLElement) {
        target.scrollIntoView({
          behavior: 'smooth',
          block: 'start'
        });
      }
    });
  });

  // Scroll-reveal for feature cards and sections
  const revealObserver = new IntersectionObserver((entries) => {
    entries.forEach((entry, index) => {
      if (entry.isIntersecting) {
        const el = entry.target as HTMLElement;
        const delay = el.dataset.delay ? parseInt(el.dataset.delay) : index * 100;
        setTimeout(() => {
          el.classList.add('reveal');
        }, delay);
        revealObserver.unobserve(el);
      }
    });
  }, { threshold: 0.1, rootMargin: '0px 0px -40px 0px' });

  document.querySelectorAll('.feature-card').forEach((card, i) => {
    (card as HTMLElement).dataset.delay = String(i * 120);
    revealObserver.observe(card);
  });

  // Parallax effect for floating cards
  let ticking = false;
  window.addEventListener('scroll', () => {
    if (!ticking) {
      requestAnimationFrame(() => {
        const scrollY = window.scrollY;
        document.querySelectorAll('.floating-card').forEach((card, i) => {
          const speed = 0.02 + i * 0.01;
          (card as HTMLElement).style.transform = `translateY(${-scrollY * speed}px)`;
        });
        ticking = false;
      });
      ticking = true;
    }
  });
</script>
