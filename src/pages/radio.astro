---
import AppLayout from "../layouts/AppLayout.astro";
import RadioPlayer from "../components/react/RadioPlayer";
---

<AppLayout title="Radio - UtopÃ­a">
  <RadioPlayer client:load />
</AppLayout>

<style is:global>
  /* Radio Container */
  .radio-container {
    max-width: 900px;
    margin: 0 auto;
    min-height: 70vh;
  }

  .radio-loading {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 50vh;
    gap: 1.5rem;
    color: rgba(255, 255, 255, 0.5);
  }

  .radio-loader {
    display: flex;
    align-items: flex-end;
    gap: 3px;
    height: 32px;
  }

  .eq-bar {
    width: 4px;
    background: #22c55e;
    border-radius: 2px;
    animation: eqBounce 1s ease-in-out infinite;
  }
  .eq-bar:nth-child(1) {
    height: 12px;
    animation-delay: 0s;
  }
  .eq-bar:nth-child(2) {
    height: 20px;
    animation-delay: 0.1s;
  }
  .eq-bar:nth-child(3) {
    height: 28px;
    animation-delay: 0.2s;
  }
  .eq-bar:nth-child(4) {
    height: 16px;
    animation-delay: 0.3s;
  }
  .eq-bar:nth-child(5) {
    height: 24px;
    animation-delay: 0.4s;
  }

  @keyframes eqBounce {
    0%,
    100% {
      transform: scaleY(0.4);
    }
    50% {
      transform: scaleY(1);
    }
  }

  /* Channels View */
  .channels-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 1.5rem;
  }

  .page-title {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 1.5rem;
    font-weight: 700;
    color: #fff;
  }

  .page-title svg {
    color: #22c55e;
  }

  .btn-create-channel {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.6rem 1.2rem;
    background: linear-gradient(135deg, #22c55e 0%, #15803d 100%);
    color: #fff;
    border: none;
    border-radius: 12px;
    font-size: 0.85rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s ease;
    box-shadow: 0 4px 14px rgba(34, 197, 94, 0.25);
  }

  .btn-create-channel:hover {
    transform: translateY(-1px);
    box-shadow: 0 6px 20px rgba(34, 197, 94, 0.35);
  }

  /* Create Channel Modal */
  .create-channel-modal {
    margin-bottom: 1.5rem;
    animation: slideDown 0.3s ease;
  }

  @keyframes slideDown {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .create-channel-form {
    padding: 1.5rem;
    border-radius: 16px;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .create-channel-form h3 {
    font-size: 1.1rem;
    font-weight: 600;
    margin-bottom: 0.25rem;
  }

  .create-channel-form input {
    width: 100%;
    padding: 0.7rem 1rem;
    background: rgba(255, 255, 255, 0.06);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 10px;
    color: #fff;
    font-size: 0.875rem;
    outline: none;
    transition: border-color 0.2s;
  }

  .create-channel-form input:focus {
    border-color: rgba(34, 197, 94, 0.5);
  }

  .create-channel-form input::placeholder {
    color: rgba(255, 255, 255, 0.35);
  }

  .form-actions {
    display: flex;
    justify-content: flex-end;
    gap: 0.75rem;
    margin-top: 0.5rem;
  }

  .btn-cancel {
    padding: 0.6rem 1.2rem;
    background: rgba(255, 255, 255, 0.08);
    border: 1px solid rgba(255, 255, 255, 0.12);
    border-radius: 10px;
    color: rgba(255, 255, 255, 0.7);
    cursor: pointer;
    font-size: 0.85rem;
    transition: all 0.2s;
  }

  .btn-cancel:hover {
    background: rgba(255, 255, 255, 0.12);
  }

  .btn-submit {
    padding: 0.6rem 1.5rem;
    background: linear-gradient(135deg, #22c55e, #15803d);
    border: none;
    border-radius: 10px;
    color: #fff;
    font-weight: 600;
    cursor: pointer;
    font-size: 0.85rem;
    transition: all 0.2s;
  }

  .btn-submit:hover {
    transform: translateY(-1px);
  }

  /* Channels Grid */
  .channels-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
    gap: 1rem;
  }

  .empty-channels {
    grid-column: 1 / -1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 4rem 2rem;
    text-align: center;
    color: rgba(255, 255, 255, 0.4);
    gap: 0.75rem;
  }

  .empty-channels h3 {
    color: rgba(255, 255, 255, 0.6);
    font-size: 1.1rem;
  }

  .radio-instructions {
    color: rgba(255, 255, 255, 0.5) !important;
    font-size: 0.8rem !important;
    line-height: 1.4 !important;
    margin: 0.5rem 0 1rem !important;
    text-align: center !important;
  }

  .radio-instructions code {
    background: rgba(34, 197, 94, 0.1);
    color: #4ade80;
    padding: 0.2rem 0.4rem;
    border-radius: 4px;
    font-family: "Monaco", "Consolas", monospace;
    font-size: 0.75rem;
  }

  .channel-card {
    display: flex;
    flex-direction: column;
    border-radius: 16px;
    overflow: hidden;
    cursor: pointer;
    border: 1px solid rgba(255, 255, 255, 0.06);
    background: rgba(19, 25, 23, 0.7);
    backdrop-filter: blur(20px);
    transition: all 0.3s ease;
    text-align: left;
    color: inherit;
    font-family: inherit;
    padding: 0;
  }

  .channel-card:hover {
    transform: translateY(-4px);
    border-color: rgba(34, 197, 94, 0.3);
    box-shadow:
      0 12px 40px rgba(0, 0, 0, 0.3),
      0 0 20px rgba(34, 197, 94, 0.1);
  }

  .channel-cover {
    position: relative;
    height: 120px;
    background: linear-gradient(
      135deg,
      rgba(34, 197, 94, 0.2),
      rgba(16, 185, 129, 0.1)
    );
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .channel-cover img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .channel-cover-placeholder {
    color: rgba(34, 197, 94, 0.4);
  }

  .live-badge {
    position: absolute;
    top: 8px;
    right: 8px;
    padding: 0.2rem 0.6rem;
    background: #ef4444;
    color: #fff;
    border-radius: 6px;
    font-size: 0.65rem;
    font-weight: 700;
    letter-spacing: 0.05em;
    animation: livePulse 2s ease-in-out infinite;
  }

  @keyframes livePulse {
    0%,
    100% {
      opacity: 1;
    }
    50% {
      opacity: 0.7;
    }
  }

  .channel-info {
    padding: 1rem;
    display: flex;
    flex-direction: column;
    gap: 0.3rem;
  }

  .channel-name {
    font-size: 1rem;
    font-weight: 600;
    color: #fff;
  }

  .channel-genre {
    font-size: 0.7rem;
    font-weight: 600;
    color: #22c55e;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .channel-desc {
    font-size: 0.8rem;
    color: rgba(255, 255, 255, 0.5);
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .channel-meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-top: 0.3rem;
    font-size: 0.75rem;
    color: rgba(255, 255, 255, 0.4);
  }

  .listener-count {
    display: flex;
    align-items: center;
    gap: 0.3rem;
  }

  /* Channel Detail View */
  .channel-detail-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.06);
  }

  .btn-back {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    border-radius: 10px;
    background: rgba(255, 255, 255, 0.06);
    border: 1px solid rgba(255, 255, 255, 0.08);
    color: rgba(255, 255, 255, 0.7);
    cursor: pointer;
    transition: all 0.2s;
  }

  .btn-back:hover {
    background: rgba(255, 255, 255, 0.1);
    color: #fff;
  }

  .channel-detail-info h2 {
    font-size: 1.25rem;
    font-weight: 700;
  }

  .genre-tag {
    font-size: 0.7rem;
    font-weight: 600;
    color: #22c55e;
    text-transform: uppercase;
    letter-spacing: 0.04em;
  }

  .live-indicator {
    margin-left: auto;
    display: flex;
    align-items: center;
    gap: 0.4rem;
    font-size: 0.75rem;
    font-weight: 600;
    color: #ef4444;
  }

  .live-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: #ef4444;
    animation: livePulse 1.5s ease-in-out infinite;
  }

  /* Channel Content Layout */
  .channel-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
    margin-bottom: 80px;
  }

  @media (max-width: 768px) {
    .channel-content {
      grid-template-columns: 1fr;
    }
  }

  .section-label {
    font-size: 0.8rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: rgba(255, 255, 255, 0.4);
    margin-bottom: 0.75rem;
  }

  /* Tracks */
  .tracks-section {
    background: rgba(19, 25, 23, 0.5);
    border: 1px solid rgba(255, 255, 255, 0.06);
    border-radius: 16px;
    padding: 1rem;
    max-height: 450px;
    overflow-y: auto;
  }

  .tracks-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 0.75rem;
  }

  .tracks-header .section-label {
    margin-bottom: 0;
  }

  .btn-add-track {
    display: inline-flex;
    align-items: center;
    gap: 0.35rem;
    padding: 0.35rem 0.75rem;
    background: rgba(34, 197, 94, 0.1);
    border: 1px solid rgba(34, 197, 94, 0.25);
    border-radius: 10px;
    color: #4ade80;
    font-size: 0.75rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s;
    font-family: inherit;
  }

  .btn-add-track:hover {
    background: rgba(34, 197, 94, 0.18);
    border-color: rgba(34, 197, 94, 0.4);
    transform: translateY(-1px);
  }

  .tracks-list {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .no-tracks {
    text-align: center;
    padding: 2rem;
    color: rgba(255, 255, 255, 0.35);
    font-size: 0.85rem;
  }

  .track-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.65rem 0.75rem;
    border-radius: 10px;
    background: transparent;
    border: none;
    color: #fff;
    cursor: pointer;
    font-family: inherit;
    text-align: left;
    width: 100%;
    transition: all 0.2s;
  }

  .track-item:hover {
    background: rgba(255, 255, 255, 0.05);
  }

  .track-item.active {
    background: rgba(34, 197, 94, 0.1);
    border: 1px solid rgba(34, 197, 94, 0.2);
  }

  .track-number {
    width: 24px;
    text-align: center;
    font-size: 0.8rem;
    color: rgba(255, 255, 255, 0.4);
    flex-shrink: 0;
  }

  .track-info {
    flex: 1;
    min-width: 0;
    display: flex;
    flex-direction: column;
    gap: 0.15rem;
  }

  .track-title {
    font-size: 0.875rem;
    font-weight: 500;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .track-artist {
    font-size: 0.75rem;
    color: rgba(255, 255, 255, 0.4);
  }

  .track-duration {
    font-size: 0.75rem;
    color: rgba(255, 255, 255, 0.35);
    flex-shrink: 0;
  }

  .eq-mini {
    display: flex;
    align-items: flex-end;
    gap: 2px;
    height: 14px;
  }

  .eq-mini span {
    width: 3px;
    background: #22c55e;
    border-radius: 1px;
    animation: eqBounce 0.8s ease-in-out infinite;
  }

  .eq-mini span:nth-child(1) {
    height: 6px;
    animation-delay: 0s;
  }
  .eq-mini span:nth-child(2) {
    height: 10px;
    animation-delay: 0.15s;
  }
  .eq-mini span:nth-child(3) {
    height: 8px;
    animation-delay: 0.3s;
  }

  /* Chat Section */
  .chat-section {
    background: rgba(19, 25, 23, 0.5);
    border: 1px solid rgba(255, 255, 255, 0.06);
    border-radius: 16px;
    padding: 1rem;
    display: flex;
    flex-direction: column;
    max-height: 450px;
  }

  .chat-messages {
    flex: 1;
    overflow-y: auto;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    margin-bottom: 0.75rem;
    padding-right: 0.25rem;
  }

  .chat-messages::-webkit-scrollbar {
    width: 3px;
  }
  .chat-messages::-webkit-scrollbar-thumb {
    background: rgba(34, 197, 94, 0.2);
    border-radius: 2px;
  }

  .chat-msg {
    display: flex;
    gap: 0.5rem;
    align-items: flex-start;
    animation: msgIn 0.3s ease;
  }

  @keyframes msgIn {
    from {
      opacity: 0;
      transform: translateY(6px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .chat-msg.own {
    flex-direction: row-reverse;
  }

  .chat-avatar {
    width: 28px;
    height: 28px;
    border-radius: 50%;
    object-fit: cover;
    flex-shrink: 0;
    background: rgba(34, 197, 94, 0.2);
  }

  .chat-bubble {
    max-width: 80%;
    padding: 0.5rem 0.75rem;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 12px;
    border: 1px solid rgba(255, 255, 255, 0.04);
  }

  .chat-msg.own .chat-bubble {
    background: rgba(34, 197, 94, 0.12);
    border-color: rgba(34, 197, 94, 0.2);
  }

  .chat-username {
    font-size: 0.7rem;
    font-weight: 600;
    color: #22c55e;
  }

  .chat-text {
    font-size: 0.82rem;
    color: rgba(255, 255, 255, 0.85);
    margin-top: 0.15rem;
    line-height: 1.4;
    word-break: break-word;
  }

  .chat-input-form {
    display: flex;
    gap: 0.5rem;
  }

  .chat-input {
    flex: 1;
    padding: 0.6rem 0.9rem;
    background: rgba(255, 255, 255, 0.06);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 10px;
    color: #fff;
    font-size: 0.85rem;
    outline: none;
    transition: border-color 0.2s;
  }

  .chat-input:focus {
    border-color: rgba(34, 197, 94, 0.4);
  }

  .chat-input::placeholder {
    color: rgba(255, 255, 255, 0.3);
  }

  .btn-send {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 38px;
    height: 38px;
    background: linear-gradient(135deg, #22c55e, #15803d);
    border: none;
    border-radius: 10px;
    color: #fff;
    cursor: pointer;
    transition: all 0.2s;
    flex-shrink: 0;
  }

  .btn-send:hover:not(:disabled) {
    transform: scale(1.05);
  }

  .btn-send:disabled {
    opacity: 0.4;
    cursor: not-allowed;
  }

  /* Player Bar */
  .player-bar {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    display: flex;
    align-items: center;
    gap: 1.5rem;
    padding: 0.75rem 1.5rem;
    background: rgba(10, 15, 14, 0.95);
    backdrop-filter: blur(24px);
    border-top: 1px solid rgba(34, 197, 94, 0.15);
    z-index: 200;
  }

  @media (max-width: 768px) {
    .player-bar {
      bottom: 64px;
      flex-wrap: wrap;
      gap: 0.5rem;
      padding: 0.5rem 1rem;
    }
  }

  .player-track-info {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    min-width: 160px;
  }

  .player-eq {
    color: #22c55e;
  }

  .player-title {
    font-size: 0.85rem;
    font-weight: 600;
    color: #fff;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    max-width: 150px;
  }

  .player-artist {
    font-size: 0.7rem;
    color: rgba(255, 255, 255, 0.45);
  }

  .player-controls {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .ctrl-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 34px;
    height: 34px;
    border-radius: 50%;
    background: transparent;
    border: none;
    color: rgba(255, 255, 255, 0.7);
    cursor: pointer;
    transition: all 0.2s;
  }

  .ctrl-btn:hover {
    color: #fff;
    background: rgba(255, 255, 255, 0.08);
  }

  .ctrl-btn.play-btn {
    width: 40px;
    height: 40px;
    background: #22c55e;
    color: #fff;
  }

  .ctrl-btn.play-btn:hover {
    background: #16a34a;
    transform: scale(1.05);
  }

  .player-progress {
    flex: 1;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    min-width: 0;
  }

  .time-label {
    font-size: 0.7rem;
    color: rgba(255, 255, 255, 0.4);
    min-width: 32px;
    text-align: center;
  }

  .progress-slider,
  .volume-slider {
    -webkit-appearance: none;
    appearance: none;
    height: 4px;
    border-radius: 2px;
    background: rgba(255, 255, 255, 0.12);
    outline: none;
    flex: 1;
  }

  .progress-slider::-webkit-slider-thumb,
  .volume-slider::-webkit-slider-thumb {
    -webkit-appearance: none;
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: #22c55e;
    cursor: pointer;
    box-shadow: 0 0 6px rgba(34, 197, 94, 0.4);
  }

  .player-volume {
    display: flex;
    align-items: center;
    gap: 0.4rem;
    min-width: 100px;
    color: rgba(255, 255, 255, 0.5);
  }

  @media (max-width: 640px) {
    .player-volume {
      display: none;
    }
    .player-progress {
      order: 3;
      width: 100%;
      flex: auto;
    }
  }

  /* Toast notifications */
  .radio-toast {
    position: fixed;
    top: 24px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 10000;
    display: flex;
    align-items: center;
    gap: 0.6rem;
    padding: 0.75rem 1.25rem;
    border-radius: 12px;
    font-size: 0.85rem;
    font-weight: 500;
    backdrop-filter: blur(20px);
    animation:
      toastIn 0.35s cubic-bezier(0.4, 0, 0.2, 1),
      toastOut 0.3s ease 2.5s forwards;
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.4);
    max-width: 90vw;
  }

  .radio-toast-error {
    background: rgba(239, 68, 68, 0.15);
    border: 1px solid rgba(239, 68, 68, 0.35);
    color: #fca5a5;
  }

  .radio-toast-success {
    background: rgba(34, 197, 94, 0.15);
    border: 1px solid rgba(34, 197, 94, 0.35);
    color: #86efac;
  }

  .radio-toast-info {
    background: rgba(59, 130, 246, 0.15);
    border: 1px solid rgba(59, 130, 246, 0.35);
    color: #93bbfd;
  }

  @keyframes toastIn {
    from {
      opacity: 0;
      transform: translateX(-50%) translateY(-12px);
    }
    to {
      opacity: 1;
      transform: translateX(-50%) translateY(0);
    }
  }
  @keyframes toastOut {
    from {
      opacity: 1;
      transform: translateX(-50%) translateY(0);
    }
    to {
      opacity: 0;
      transform: translateX(-50%) translateY(-12px);
    }
  }

  .radio-container {
    max-width: 1200px;
    margin: 0 auto;
    min-height: 70vh;
    padding: 1.5rem 1rem 2.5rem;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .radio-loading {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 50vh;
    gap: 1rem;
    text-align: center;
    color: var(--text-secondary);
    padding: 2rem;
  }

  .radio-loader {
    display: flex;
    align-items: flex-end;
    gap: 4px;
    height: 28px;
  }

  .eq-bar {
    width: 4px;
    background: var(--color-accent-primary);
    border-radius: 2px;
    animation: eqBounce 1s ease-in-out infinite;
  }
  .eq-bar:nth-child(1) { height: 10px; animation-delay: 0s; }
