---
import BaseLayout from '../../layouts/BaseLayout.astro';
---

<BaseLayout title="Verificando... - Utopía">
  <main class="callback-page">
    <div class="callback-container">
      <!-- Animated Background -->
      <div class="bg-animation">
        <div class="circle circle-1"></div>
        <div class="circle circle-2"></div>
        <div class="circle circle-3"></div>
      </div>

      <!-- Main Content -->
      <div class="callback-content">
        <!-- Logo Animation -->
        <div class="logo-container">
          <div class="logo-ring"></div>
          <div class="logo-ring ring-2"></div>
          <div class="logo-ring ring-3"></div>
          <div class="logo-center">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
        </div>

        <!-- Text -->
        <h1 class="callback-title">Verificando tu cuenta</h1>
        <p class="callback-subtitle" id="status-text">Conectando con tu proveedor...</p>

        <!-- Progress Steps -->
        <div class="progress-steps">
          <div class="step active" id="step-1">
            <div class="step-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
            </div>
            <span>Autenticando</span>
          </div>
          <div class="step-line" id="line-1"></div>
          <div class="step" id="step-2">
            <div class="step-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
              </svg>
            </div>
            <span>Verificando</span>
          </div>
          <div class="step-line" id="line-2"></div>
          <div class="step" id="step-3">
            <div class="step-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M5 13l4 4L19 7" />
              </svg>
            </div>
            <span>Completado</span>
          </div>
        </div>
      </div>
    </div>
  </main>
</BaseLayout>

<style>
  .callback-page {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #0a0a0a 0%, #121212 50%, #0a0a0a 100%);
    overflow: hidden;
  }

  .callback-container {
    position: relative;
    width: 100%;
    max-width: 480px;
    padding: 2rem;
  }

  /* Background Animation */
  .bg-animation {
    position: fixed;
    inset: 0;
    pointer-events: none;
    overflow: hidden;
  }

  .circle {
    position: absolute;
    border-radius: 50%;
    background: radial-gradient(circle, rgba(34, 197, 94, 0.3) 0%, transparent 70%);
    animation: float 6s ease-in-out infinite;
  }

  .circle-1 {
    width: 400px;
    height: 400px;
    top: -100px;
    right: -100px;
    animation-delay: 0s;
  }

  .circle-2 {
    width: 300px;
    height: 300px;
    bottom: -50px;
    left: -50px;
    animation-delay: 2s;
  }

  .circle-3 {
    width: 200px;
    height: 200px;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    animation-delay: 4s;
  }

  @keyframes float {
    0%, 100% { transform: scale(1) translateY(0); opacity: 0.5; }
    50% { transform: scale(1.1) translateY(-20px); opacity: 0.8; }
  }

  /* Content */
  .callback-content {
    position: relative;
    z-index: 10;
    text-align: center;
  }

  /* Logo Animation */
  .logo-container {
    position: relative;
    width: 120px;
    height: 120px;
    margin: 0 auto 2rem;
  }

  .logo-ring {
    position: absolute;
    inset: 0;
    border: 3px solid transparent;
    border-top-color: #22c55e;
    border-radius: 50%;
    animation: spin 1.5s linear infinite;
  }

  .ring-2 {
    inset: 10px;
    border-top-color: #2a7d5a;
    animation-duration: 2s;
    animation-direction: reverse;
  }

  .ring-3 {
    inset: 20px;
    border-top-color: #16a34a;
    animation-duration: 2.5s;
  }

  @keyframes spin {
    to { transform: rotate(360deg); }
  }

  .logo-center {
    position: absolute;
    inset: 30px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #22c55e 0%, #15803d 100%);
    border-radius: 50%;
    animation: pulse 2s ease-in-out infinite;
  }

  .logo-center svg {
    width: 32px;
    height: 32px;
    color: white;
  }

  @keyframes pulse {
    0%, 100% { transform: scale(1); box-shadow: 0 0 0 0 rgba(34, 197, 94, 0.4); }
    50% { transform: scale(1.05); box-shadow: 0 0 20px 10px rgba(34, 197, 94, 0.2); }
  }

  /* Text */
  .callback-title {
    font-size: 1.75rem;
    font-weight: 700;
    color: white;
    margin-bottom: 0.5rem;
    animation: fadeInUp 0.5s ease-out;
  }

  .callback-subtitle {
    font-size: 1rem;
    color: rgba(255, 255, 255, 0.6);
    margin-bottom: 2rem;
    animation: fadeInUp 0.5s ease-out 0.1s both;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Progress Steps */
  .progress-steps {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0;
    animation: fadeInUp 0.5s ease-out 0.2s both;
  }

  .step {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    opacity: 0.4;
    transition: all 0.3s ease;
  }

  .step.active {
    opacity: 1;
  }

  .step.completed {
    opacity: 1;
  }

  .step.completed .step-icon {
    background: #22c55e;
    border-color: #22c55e;
  }

  .step-icon {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(34, 197, 94, 0.2);
    border: 2px solid rgba(34, 197, 94, 0.3);
    border-radius: 50%;
    transition: all 0.3s ease;
  }

  .step.active .step-icon {
    background: rgba(34, 197, 94, 0.3);
    border-color: #22c55e;
    animation: pulse-icon 1.5s ease-in-out infinite;
  }

  @keyframes pulse-icon {
    0%, 100% { box-shadow: 0 0 0 0 rgba(34, 197, 94, 0.4); }
    50% { box-shadow: 0 0 0 10px rgba(34, 197, 94, 0); }
  }

  .step-icon svg {
    width: 24px;
    height: 24px;
    color: #22c55e;
  }

  .step.completed .step-icon svg {
    color: white;
  }

  .step span {
    font-size: 0.75rem;
    color: rgba(255, 255, 255, 0.6);
    white-space: nowrap;
  }

  .step.active span,
  .step.completed span {
    color: white;
  }

  .step-line {
    width: 40px;
    height: 2px;
    background: rgba(34, 197, 94, 0.2);
    margin: 0 0.5rem;
    margin-bottom: 1.5rem;
    transition: background 0.3s ease;
  }

  .step-line.active {
    background: linear-gradient(90deg, #22c55e, rgba(34, 197, 94, 0.3));
  }
</style>

<script>
  import { supabase } from '../../lib/supabase/client';
  
  const statusText = document.getElementById('status-text');
  const step1 = document.getElementById('step-1');
  const step2 = document.getElementById('step-2');
  const step3 = document.getElementById('step-3');
  const line1 = document.getElementById('line-1');
  const line2 = document.getElementById('line-2');

  // Log current origin for debugging
  console.log('[Callback] Current origin:', window.location.origin);
  console.log('[Callback] Current URL:', window.location.href);

  function updateStep(step: number) {
    if (step >= 1) {
      step1?.classList.add('active');
      statusText!.textContent = 'Autenticando tu identidad...';
    }
    if (step >= 2) {
      step1?.classList.add('completed');
      step1?.classList.remove('active');
      line1?.classList.add('active');
      step2?.classList.add('active');
      statusText!.textContent = 'Verificando tus datos...';
    }
    if (step >= 3) {
      step2?.classList.add('completed');
      step2?.classList.remove('active');
      line2?.classList.add('active');
      step3?.classList.add('active');
      statusText!.textContent = '¡Verificación completada!';
    }
    if (step >= 4) {
      step3?.classList.add('completed');
      step3?.classList.remove('active');
      statusText!.textContent = 'Redirigiendo...';
    }
  }

  // Helper function to redirect while preserving the current origin
  function redirectTo(path: string) {
    // Check if we have a saved origin in localStorage
    const savedOrigin = localStorage.getItem('oauth_redirect_origin');
    
    if (savedOrigin && savedOrigin !== window.location.origin) {
      console.log('[Callback] Redirecting to saved origin:', savedOrigin);
      window.location.href = `${savedOrigin}${path}`;
    } else {
      // Use relative URL to preserve the current host (IP or localhost)
      console.log('[Callback] Redirecting to:', path);
      console.log('[Callback] Full URL will be:', window.location.origin + path);
      window.location.href = path;
    }
  }

  // Start animation
  setTimeout(() => updateStep(1), 500);
  
  async function handleCallback() {
    try {
      setTimeout(() => updateStep(2), 1500);
      
      // Check if we have an access token in the URL hash (implicit flow)
      // or code in query params (PKCE flow)
      const hashParams = new URLSearchParams(window.location.hash.substring(1));
      const queryParams = new URLSearchParams(window.location.search);
      
      console.log('[Callback] Hash params:', Object.fromEntries(hashParams));
      console.log('[Callback] Query params:', Object.fromEntries(queryParams));
      
      // Let Supabase handle the session from URL
      const { data: { session }, error } = await supabase.auth.getSession();
      
      console.log('[Callback] Session:', session ? 'found' : 'not found');
      console.log('[Callback] Error:', error);
      
      if (error) {
        console.error('[Callback] Error getting session:', error);
        statusText!.textContent = 'Error de autenticación';
        setTimeout(() => {
          redirectTo('/login?error=auth_callback_error');
        }, 1500);
        return;
      }
      
      if (session) {
        setTimeout(() => {
          updateStep(3);
          setTimeout(() => {
            updateStep(4);
            setTimeout(() => {
              redirectTo('/feed');
            }, 800);
          }, 800);
        }, 500);
      } else {
        // Wait for auth state change
        const { data: { subscription } } = supabase.auth.onAuthStateChange((event, session) => {
          console.log('[Callback] Auth state change:', event, session ? 'session found' : 'no session');
          if (event === 'SIGNED_IN' && session) {
            subscription.unsubscribe();
            setTimeout(() => {
              updateStep(3);
              setTimeout(() => {
                updateStep(4);
                setTimeout(() => {
                  redirectTo('/feed');
                }, 800);
              }, 800);
            }, 500);
          }
        });
        
        // Timeout after 15 seconds
        setTimeout(() => {
          subscription.unsubscribe();
          statusText!.textContent = 'Tiempo de espera agotado';
          setTimeout(() => {
            redirectTo('/login?error=timeout');
          }, 1500);
        }, 15000);
      }
    } catch (error) {
      console.error('[Callback] Error in callback:', error);
      statusText!.textContent = 'Error desconocido';
      setTimeout(() => {
        redirectTo('/login?error=unknown');
      }, 1500);
    }
  }
  
  handleCallback();
</script>
