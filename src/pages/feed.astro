  }

  /* Privacy Selector - top right */
  .privacy-selector {
    position: relative;
    flex-shrink: 0;
  }

  .privacy-toggle-btn {
    display: flex;
    align-items: center;
    gap: 0.35rem;
    padding: 0.35rem 0.7rem;
    background: rgba(34, 197, 94, 0.08);
    border: 1px solid rgba(34, 197, 94, 0.2);
    border-radius: 20px;
    color: #4ade80;
    font-size: 0.75rem;
    font-weight: 600;
    font-family: inherit;
