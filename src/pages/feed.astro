---
// Feed page - Main social feed with posts
import AppLayout from "../layouts/AppLayout.astro";
import FeedComponent from "../components/react/Feed";
import OnlineUsers from "../components/react/OnlineUsers";
import { getCurrentUser } from "../lib/supabase/server";
import { supabase } from "../lib/supabase/client";

// Fetch user data server-side to avoid flash
const user = await getCurrentUser(Astro);
let avatarUrl = "/images/default-avatar.svg";

if (user) {
  const { data: profile } = await supabase
    .from("profiles")
    .select("avatar_url")
    .eq("id", user.id)
    .single();

  if (profile?.avatar_url) {
    avatarUrl = profile.avatar_url;
  }
}
---

<AppLayout title="Feed - Utopía">
  <OnlineUsers client:visible slot="sidebar-right" />
  <div class="feed-page">
    <!-- Inline Create Post Section -->
    <div class="create-post-section glass" id="create-post-box">
      <div class="create-post-header">
        <img
          src={avatarUrl}
          alt="Tu avatar"
          class="avatar-small"
          id="user-avatar"
        />
        <button class="create-post-trigger" id="expand-post-btn" type="button">
          ¿Qué estás pensando?
        </button>
        <!-- Privacy Selector (top-right) -->
        <div class="privacy-selector" id="privacy-selector">
          <button class="privacy-toggle-btn" type="button" id="privacy-toggle">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" id="privacy-icon">
              <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
              <circle cx="9" cy="7" r="4"></circle>
              <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
              <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
            </svg>
            <span id="privacy-label">Amigos</span>
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="chevron-icon"><polyline points="6 9 12 15 18 9"></polyline></svg>
          </button>
          <div class="privacy-dropdown" id="privacy-dropdown" style="display:none;">
            <button class="privacy-option" data-value="public" type="button">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"></circle><line x1="2" y1="12" x2="22" y2="12"></line><path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path></svg>
              <span>Público</span>
            </button>
            <button class="privacy-option active" data-value="friends" type="button">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path><circle cx="9" cy="7" r="4"></circle><path d="M23 21v-2a4 4 0 0 0-3-3.87"></path><path d="M16 3.13a4 4 0 0 1 0 7.75"></path></svg>
              <span>Amigos</span>
            </button>
            <button class="privacy-option" data-value="private" type="button">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect><path d="M7 11V7a5 5 0 0 1 10 0v4"></path></svg>
              <span>Solo yo</span>
            </button>
          </div>
        </div>
      </div>

      <!-- Expanded Form (hidden by default) -->
      <div
        class="create-post-expanded"
        id="post-form-expanded"
        style="display:none;"
      >
        <textarea
          class="post-textarea"
          id="post-content"
          placeholder="Comparte algo con tus amigos..."
          rows="3"
          maxlength="2000"></textarea>

        <!-- Image Preview -->
        <div
          class="image-preview-container"
          id="image-preview-container"
          style="display:none;"
        >
          <img id="image-preview" alt="Vista previa" />
          <button class="remove-image-btn" id="remove-image-btn" type="button"
            >✕</button
          >
        </div>

        <div class="create-post-footer">
          <div class="create-post-actions">
            <label class="action-btn" for="image-input">
              <svg
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                <circle cx="8.5" cy="8.5" r="1.5"></circle>
                <polyline points="21 15 16 10 5 21"></polyline>
              </svg>
              <span>Foto</span>
              <input
                type="file"
                id="image-input"
                accept="image/*"
                style="display:none;"
              />
            </label>
            <button class="action-btn" type="button" id="location-btn">
              <svg
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                <circle cx="12" cy="10" r="3"></circle>
              </svg>
              <span>Ubicación</span>
            </button>
          </div>
          <div class="post-submit-area">
            <span class="char-count" id="char-count">0/2000</span>
            <button
              class="btn btn-primary btn-sm publish-btn"
              id="publish-btn"
              disabled
            >
              <span class="publish-text">Publicar</span>
              <span class="publish-loading" style="display:none;">
                <span class="spinner-small"></span>
              </span>
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Feed Content -->
    <div class="feed-content">
      <FeedComponent client:visible />
    </div>
  </div>
</AppLayout>

<script>
  import { supabase } from "../lib/supabase/client";

  let selectedFile: File | null = null;
  let selectedPrivacy = "friends";

  // Server-side loaded avatar is already set
  const expandBtn = document.getElementById("expand-post-btn");
  const formExpanded = document.getElementById("post-form-expanded");
  const postContent = document.getElementById(
    "post-content",
  ) as HTMLTextAreaElement;
  const imageInput = document.getElementById("image-input") as HTMLInputElement;
  const imagePreviewContainer = document.getElementById(
    "image-preview-container",
  );
  const imagePreview = document.getElementById(
    "image-preview",
  ) as HTMLImageElement;
  const removeImageBtn = document.getElementById("remove-image-btn");
  const publishBtn = document.getElementById("publish-btn");
  const charCount = document.getElementById("char-count");
  const avatarEl = document.getElementById("user-avatar") as HTMLImageElement;

  // Provide fallback just in case
  avatarEl.onerror = () => {
    avatarEl.src = "/images/default-avatar.svg";
  };

  // Expand post form
  expandBtn?.addEventListener("click", () => {
    if (formExpanded) {
      formExpanded.style.display = "block";
      expandBtn.style.display = "none";
      postContent?.focus();
    }
  });

  // Collapse post form when clicking outside
  document.addEventListener("click", (e) => {
    const target = e.target as Element;
    const createPostSection = document.querySelector(".create-post-section");
    const isInsideCreatePost = createPostSection?.contains(target);

    if (!isInsideCreatePost && formExpanded && formExpanded.style.display === "block") {
      // Only collapse if no content and no image
      const hasContent = (postContent?.value.trim().length || 0) > 0;
      const hasImage = selectedFile !== null;

      if (!hasContent && !hasImage) {
        formExpanded.style.display = "none";
        if (expandBtn) {
          expandBtn.style.display = "block";
        }
        // Reset textarea height
        if (postContent) {
          postContent.style.height = "auto";
        }
      }
    }
  });

  // Character count + enable/disable publish
  postContent?.addEventListener("input", () => {
    const len = postContent.value.length;
    if (charCount) charCount.textContent = `${len}/2000`;
    updatePublishState();
  });

  // Auto-resize textarea
  postContent?.addEventListener("input", () => {
    postContent.style.height = "auto";
    postContent.style.height = postContent.scrollHeight + "px";
  });

  function updatePublishState() {
    const hasContent = (postContent?.value.trim().length || 0) > 0;
    const hasImage = selectedFile !== null;
    if (publishBtn) {
      (publishBtn as HTMLButtonElement).disabled = !hasContent && !hasImage;
    }
  }

  // Image handling
  imageInput?.addEventListener("change", (e) => {
    const file = (e.target as HTMLInputElement).files?.[0];
    if (file) {
      selectedFile = file;
      const reader = new FileReader();
      reader.onload = (ev) => {
        if (imagePreview && imagePreviewContainer) {
          imagePreview.src = ev.target?.result as string;
          imagePreviewContainer.style.display = "block";
        }
      };
      reader.readAsDataURL(file);
      updatePublishState();
    }
  });

  removeImageBtn?.addEventListener("click", () => {
    selectedFile = null;
    if (imagePreviewContainer) imagePreviewContainer.style.display = "none";
    if (imageInput) imageInput.value = "";
    updatePublishState();
  });

  // Publish post
  publishBtn?.addEventListener("click", async () => {
    const content = postContent?.value.trim();
    if (!content && !selectedFile) return;

    const {
      data: { user },
    } = await supabase.auth.getUser();
    if (!user) {
      window.location.href = "/login";
      return;
    }

    // Show loading
    const publishText = publishBtn.querySelector(
      ".publish-text",
    ) as HTMLElement;
    const publishLoading = publishBtn.querySelector(
      ".publish-loading",
    ) as HTMLElement;
    if (publishText) publishText.style.display = "none";
    if (publishLoading) publishLoading.style.display = "inline-flex";
    (publishBtn as HTMLButtonElement).disabled = true;

    let mediaUrls: string[] = [];

    // Upload image if present
    if (selectedFile) {
      const fileExt = selectedFile.name.split(".").pop();
      const fileName = `${user.id}/${Date.now()}.${fileExt}`;

      const { data: uploadData, error: uploadError } = await supabase.storage
        .from("media")
        .upload(fileName, selectedFile, {
          cacheControl: "3600",
          upsert: false,
        });

      if (uploadError) {
        console.error("Upload error:", uploadError);
        alert("Error al subir la imagen");
        resetPublishBtn();
        return;
      }

      const {
        data: { publicUrl },
      } = supabase.storage.from("media").getPublicUrl(fileName);

      mediaUrls = [publicUrl];
    }

    // Create post
    const { error } = await supabase.from("posts").insert({
      user_id: user.id,
      content: content || "",
      media_urls: mediaUrls.length > 0 ? mediaUrls : null,
      visibility: selectedPrivacy,
    });

    if (error) {
      console.error("Post error:", error);
      alert("Error al publicar");
      resetPublishBtn();
      return;
    }

    // Success - reset form
    if (postContent) postContent.value = "";
    selectedFile = null;
    if (imagePreviewContainer) imagePreviewContainer.style.display = "none";
    if (imageInput) imageInput.value = "";
    if (charCount) charCount.textContent = "0/2000";
    if (expandBtn) expandBtn.style.display = "block";
    if (formExpanded) formExpanded.style.display = "none";
    resetPublishBtn();

    // Reload feed by dispatching event
    window.dispatchEvent(new CustomEvent("new-post-created"));
  });

  function resetPublishBtn() {
    const publishText = publishBtn?.querySelector(
      ".publish-text",
    ) as HTMLElement;
    const publishLoading = publishBtn?.querySelector(
      ".publish-loading",
    ) as HTMLElement;
    if (publishText) publishText.style.display = "inline";
    if (publishLoading) publishLoading.style.display = "none";
    updatePublishState();
  }

  // Privacy selector logic
  const privacyToggle = document.getElementById("privacy-toggle");
  const privacyDropdown = document.getElementById("privacy-dropdown");
  const privacyLabel = document.getElementById("privacy-label");
  const privacyOptions = document.querySelectorAll(".privacy-option");

  privacyToggle?.addEventListener("click", (e) => {
    e.stopPropagation();
    if (privacyDropdown) {
      privacyDropdown.style.display = privacyDropdown.style.display === "none" ? "flex" : "none";
    }
  });

  privacyOptions.forEach((opt) => {
    opt.addEventListener("click", () => {
      const value = opt.getAttribute("data-value") || "friends";
      selectedPrivacy = value;
      if (privacyLabel) privacyLabel.textContent = opt.querySelector("span")?.textContent || "Amigos";
      privacyOptions.forEach((o) => o.classList.remove("active"));
      opt.classList.add("active");
      if (privacyDropdown) privacyDropdown.style.display = "none";
    });
  });

  // Close dropdown on outside click
  document.addEventListener("click", () => {
    if (privacyDropdown) privacyDropdown.style.display = "none";
  });
</script>

