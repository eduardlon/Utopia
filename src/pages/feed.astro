  }

  .privacy-toggle-btn:hover {
    background: rgba(34, 197, 94, 0.14);
    border-color: rgba(34, 197, 94, 0.35);
  }

  .privacy-toggle-btn svg {
    width: 14px;
    height: 14px;
  }

  .chevron-icon {
    width: 12px !important;
    height: 12px !important;
    opacity: 0.6;
  }

