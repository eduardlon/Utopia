<script>
  import { supabase } from '../lib/supabase/client';

  interface Friend {
    user_id: string;
    username: string;
    display_name: string | null;
    avatar_url: string | null;
    status: string;
    last_seen: string;
  }

  interface Message {
    id: string;
    sender_id: string;
    content: string;
    created_at: string;
  }

  interface Conversation {
    id: string;
    other_user: Friend;
    last_message: string;
    last_message_at: string;
    unread_count: number;
  }

  let friends: Friend[] = [];
  let conversations: Conversation[] = [];
  let filteredConversations: Conversation[] = [];
  let currentTab = 'all';
  let currentChat: { id: string; name: string; avatar: string; status: string } | null = null;
  let conversationId: string | null = null;
  let userId: string | null = null;
  let messages: Message[] = [];
  let realtimeChannel: any = null;

  // Elements
  const conversationsView = document.getElementById('conversations-view')!;
  const chatView = document.getElementById('chat-view')!;
  const convList = document.getElementById('conv-list')!;
  const convSkeleton = document.getElementById('conv-skeleton')!;
  const emptyState = document.getElementById('empty-state')!;
  const searchBtn = document.getElementById('search-btn')!;
  const searchContainer = document.getElementById('search-container')!;
  const searchInput = document.getElementById('search-input') as HTMLInputElement;
  const searchClear = document.getElementById('search-clear')!;
  const newChatBtn = document.getElementById('new-chat-btn')!;
  const startBtn = document.getElementById('start-btn')!;
  const tabs = document.querySelectorAll('.conv-tab');
  const unreadBadge = document.getElementById('unread-badge')!;

  const backBtn = document.getElementById('back-btn')!;
  const chatAvatar = document.getElementById('chat-avatar') as HTMLImageElement;
  const chatStatusDot = document.getElementById('chat-status-dot')!;
  const chatName = document.getElementById('chat-name')!;
  const chatStatus = document.getElementById('chat-status')!;
  const chatProfile = document.getElementById('chat-profile') as HTMLAnchorElement;
  const messagesContainer = document.getElementById('messages-container')!;
  const messageForm = document.getElementById('message-form') as HTMLFormElement;
  const messageInput = document.getElementById('message-input') as HTMLInputElement;
  const sendBtn = document.getElementById('send-btn') as HTMLButtonElement;

  const newChatModal = document.getElementById('new-chat-modal')!;
  const modalClose = document.getElementById('modal-close')!;
  const modalSearchInput = document.getElementById('modal-search-input') as HTMLInputElement;
  const modalList = document.getElementById('modal-list')!;

  // Initialize
  init();

  async function init() {
    const { data: { user } } = await supabase.auth.getUser();
    if (!user) {
      window.location.href = '/login';
      return;
    }
    userId = user.id;
    await loadFriends();
    await loadConversations();
    setupEventListeners();
  }

  async function loadFriends() {
    const { data: friendships } = await (supabase as any)
      .from('friendships')
      .select('requester_id, addressee_id')
      .eq('status', 'accepted')
      .or(`requester_id.eq.${userId},addressee_id.eq.${userId}`);

    if (!friendships || friendships.length === 0) return;

    const friendIds = friendships.map((f: any) =>
      f.requester_id === userId ? f.addressee_id : f.requester_id
    );

    const { data: profiles } = await (supabase as any)
      .from('profiles')
      .select('id, username, display_name, avatar_url')
      .in('id', friendIds);

    if (!profiles) return;

    const fiveMinutesAgo = new Date(Date.now() - 5 * 60 * 1000).toISOString();
    const { data: presence } = await (supabase as any)
      .from('user_presence')
      .select('user_id, status, last_seen')
      .gte('last_seen', fiveMinutesAgo)
      .in('user_id', friendIds);

    const presenceMap = new Map((presence || []).map((p: any) => [p.user_id, p]));

    friends = profiles.map((p: any) => {
      const pres = presenceMap.get(p.id);
      return {
        user_id: p.id,
        username: p.username,
        display_name: p.display_name,
        avatar_url: p.avatar_url,
        status: pres?.status || 'offline',
        last_seen: pres?.last_seen || '',
      };
    });
  }

  async function loadConversations() {
    try {
      const { data: participations } = await (supabase as any)
        .from('conversation_participants')
        .select('conversation_id')
        .eq('user_id', userId);

      convSkeleton.hidden = true;

      if (!participations || participations.length === 0) {
        emptyState.hidden = false;
        return;
      }

      const convIds = participations.map((p: any) => p.conversation_id);
      conversations = [];

      for (const convId of convIds) {
        const { data: otherParts } = await (supabase as any)
          .from('conversation_participants')
          .select('user_id')
          .eq('conversation_id', convId)
          .neq('user_id', userId);

        if (!otherParts || otherParts.length === 0) continue;

        const otherUserId = otherParts[0].user_id;

        const { data: profile } = await (supabase as any)
          .from('profiles')
          .select('id, username, display_name, avatar_url')
          .eq('id', otherUserId)
          .single();

        if (!profile) continue;

        const { data: lastMsg } = await (supabase as any)
          .from('messages')
          .select('content, created_at, sender_id')
          .eq('conversation_id', convId)
          .order('created_at', { ascending: false })
          .limit(1)
          .single();

        const friend = friends.find(f => f.user_id === otherUserId);

        conversations.push({
          id: convId,
          other_user: {
            user_id: profile.id,
            username: profile.username,
            display_name: profile.display_name,
            avatar_url: profile.avatar_url,
            status: friend?.status || 'offline',
            last_seen: friend?.last_seen || '',
          },
          last_message: lastMsg?.content || 'Sin mensajes',
          last_message_at: lastMsg?.created_at || '',
          unread_count: 0,
        });
      }

      conversations.sort((a, b) => {
        if (!a.last_message_at) return 1;
        if (!b.last_message_at) return -1;
        return new Date(b.last_message_at).getTime() - new Date(a.last_message_at).getTime();
      });

      filterAndRender();
    } catch (e) {
      console.error('Error loading conversations:', e);
      convSkeleton.hidden = true;
      emptyState.hidden = false;
    }
  }

  function filterAndRender() {
    const search = searchInput.value.toLowerCase();

    filteredConversations = conversations.filter(conv => {
      const name = conv.other_user.display_name || conv.other_user.username;
      const matchesSearch = name.toLowerCase().includes(search);

      if (currentTab === 'unread') {
        return matchesSearch && conv.unread_count > 0;
      } else if (currentTab === 'online') {
        return matchesSearch && (conv.other_user.status === 'online' || conv.other_user.status === 'away');
      }
      return matchesSearch;
    });

    renderConversations();
  }

  function renderConversations() {
    if (filteredConversations.length === 0) {
      if (conversations.length === 0) {
        emptyState.hidden = false;
        convList.innerHTML = '';
      } else {
        convList.innerHTML = `
          <div class="empty-state">
            <p style="color: rgba(255,255,255,0.5);">No hay conversaciones en esta categoría</p>
          </div>
        `;
        emptyState.hidden = true;
      }
      return;
    }

    emptyState.hidden = true;
    convList.innerHTML = filteredConversations.map(conv => {
      const statusClass = conv.other_user.status === 'online' ? 'online' : conv.other_user.status === 'away' ? 'away' : 'offline';
      const time = formatTime(conv.last_message_at);
      const lastMsg = conv.last_message.substring(0, 45) + (conv.last_message.length > 45 ? '...' : '');

      return `
        <div class="conv-item" data-conv-id="${conv.id}" data-user-id="${conv.other_user.user_id}" data-name="${conv.other_user.display_name || conv.other_user.username}" data-avatar="${conv.other_user.avatar_url || '/images/default-avatar.svg'}" data-status="${conv.other_user.status}">
          <div class="conv-avatar-wrap">
            <img src="${conv.other_user.avatar_url || '/images/default-avatar.svg'}" alt="" class="conv-avatar" onerror="this.src='/images/default-avatar.svg'" />
            <span class="conv-status-dot ${statusClass}"></span>
          </div>
          <div class="conv-content">
            <div class="conv-row">
              <span class="conv-name">${conv.other_user.display_name || conv.other_user.username}</span>
              <span class="conv-time">${time}</span>
            </div>
            <div class="conv-preview">
              <span class="conv-last-msg">${lastMsg}</span>
              ${conv.unread_count > 0 ? `<span class="conv-unread">${conv.unread_count}</span>` : ''}
            </div>
          </div>
        </div>
      `;
    }).join('');

    convList.querySelectorAll('.conv-item').forEach(item => {
      item.addEventListener('click', () => {
        const id = item.getAttribute('data-user-id')!;
        const name = item.getAttribute('data-name')!;
        const avatar = item.getAttribute('data-avatar')!;
        const status = item.getAttribute('data-status')!;
        openChat(id, name, avatar, status);
      });
    });
  }

  function formatTime(dateStr: string): string {
    if (!dateStr) return '';
    const date = new Date(dateStr);
    const now = new Date();
    const diff = now.getTime() - date.getTime();
    const mins = Math.floor(diff / 60000);
    if (mins < 1) return 'Ahora';
    if (mins < 60) return `${mins}m`;
    const hours = Math.floor(diff / 3600000);
    if (hours < 24) return `${hours}h`;
    const days = Math.floor(diff / 86400000);
    if (days < 7) return `${days}d`;
    return date.toLocaleDateString('es', { day: 'numeric', month: 'short' });
  }

  function setupEventListeners() {
    // Tabs
    tabs.forEach(tab => {
      tab.addEventListener('click', () => {
        tabs.forEach(t => t.classList.remove('active'));
        tab.classList.add('active');
        currentTab = tab.getAttribute('data-tab') || 'all';
        filterAndRender();
      });
    });

    // Search
    searchBtn.addEventListener('click', () => {
      searchContainer.hidden = !searchContainer.hidden;
      if (!searchContainer.hidden) searchInput.focus();
    });

    searchClear.addEventListener('click', () => {
      searchContainer.hidden = true;
      searchInput.value = '';
      filterAndRender();
    });

    searchInput.addEventListener('input', filterAndRender);

    // Back button
    backBtn.addEventListener('click', closeChat);

    // Message form
    messageForm.addEventListener('submit', sendMessage);
    messageInput.addEventListener('input', () => {
      sendBtn.disabled = messageInput.value.trim().length === 0;
    });

    // New chat modal
    [newChatBtn, startBtn].forEach(btn => {
      btn.addEventListener('click', () => {
        newChatModal.hidden = false;
        loadFriendsForModal();
      });
    });

    modalClose.addEventListener('click', () => {
      newChatModal.hidden = true;
    });

    newChatModal.addEventListener('click', (e) => {
      if (e.target === newChatModal) {
        newChatModal.hidden = true;
      }
    });

    modalSearchInput.addEventListener('input', () => {
      const query = modalSearchInput.value.toLowerCase();
      modalList.querySelectorAll('.modal-item').forEach((item: any) => {
        const name = item.querySelector('.modal-item-name')?.textContent?.toLowerCase() || '';
        const username = item.querySelector('.modal-item-username')?.textContent?.toLowerCase() || '';
        item.style.display = name.includes(query) || username.includes(query) ? 'flex' : 'none';
      });
    });
  }

  async function loadFriendsForModal() {
    if (friends.length === 0) {
      modalList.innerHTML = `
        <div class="modal-loading">
          <span style="color: rgba(255,255,255,0.5);">No tienes amigos aún</span>
        </div>
      `;
      return;
    }

    modalList.innerHTML = friends.map(f => `
      <div class="modal-item" data-id="${f.user_id}" data-name="${f.display_name || f.username}" data-avatar="${f.avatar_url || '/images/default-avatar.svg'}" data-status="${f.status}">
        <img src="${f.avatar_url || '/images/default-avatar.svg'}" alt="" onerror="this.src='/images/default-avatar.svg'" />
        <div class="modal-item-info">
          <div class="modal-item-name">${f.display_name || f.username}</div>
          <div class="modal-item-username">@${f.username}</div>
        </div>
      </div>
    `).join('');

    modalList.querySelectorAll('.modal-item').forEach(item => {
      item.addEventListener('click', () => {
        const id = item.getAttribute('data-id')!;
        const name = item.getAttribute('data-name')!;
        const avatar = item.getAttribute('data-avatar')!;
        const status = item.getAttribute('data-status')!;
        newChatModal.hidden = true;
        openChat(id, name, avatar, status);
      });
    });
  }

  async function openChat(id: string, name: string, avatar: string, status: string) {
    currentChat = { id, name, avatar, status };

    chatName.textContent = name;
    chatAvatar.src = avatar;
    chatProfile.href = `/profile/${id}`;

    chatStatusDot.className = 'chat-status-dot ' + (status === 'online' ? 'online' : status === 'away' ? 'away' : 'offline');
    chatStatus.textContent = status === 'online' ? 'En línea' : status === 'away' ? 'Ausente' : 'Desconectado';
    chatStatus.style.color = status === 'online' ? '#22c55e' : status === 'away' ? '#f59e0b' : 'rgba(255,255,255,0.5)';

    conversationsView.hidden = true;
    chatView.hidden = false;
    messages = [];
    renderMessages();

    await loadConversation(id);
    messageInput.focus();
  }

  function closeChat() {
    chatView.hidden = true;
    conversationsView.hidden = false;

    if (realtimeChannel) {
      supabase.removeChannel(realtimeChannel);
      realtimeChannel = null;
    }
    currentChat = null;
    conversationId = null;
    messages = [];
  }

  async function loadConversation(recipientId: string) {
    if (!userId) return;

    try {
      const { data: existingConvos } = await (supabase as any)
        .from('conversation_participants')
        .select('conversation_id')
        .eq('user_id', userId);

      let convId: string | null = null;

      if (existingConvos && existingConvos.length > 0) {
        const convoIds = existingConvos.map((c: any) => c.conversation_id);
        const { data: sharedConvos } = await (supabase as any)
          .from('conversation_participants')
          .select('conversation_id, conversations!inner(type)')
          .eq('user_id', recipientId)
          .in('conversation_id', convoIds)
          .eq('conversations.type', 'direct');

        if (sharedConvos && sharedConvos.length > 0) {
          convId = sharedConvos[0].conversation_id;
        }
      }

      if (!convId) {
        const { data: newConvo } = await (supabase as any)
          .from('conversations')
          .insert({ type: 'direct' })
          .select('id')
          .single();

        if (newConvo) {
          convId = newConvo.id;
          await (supabase as any)
            .from('conversation_participants')
            .insert([
              { conversation_id: convId, user_id: userId },
              { conversation_id: convId, user_id: recipientId },
            ]);
        }
      }

      conversationId = convId;

      if (convId) {
        await loadMessages(convId);
        subscribeToMessages(convId);
      }
    } catch (e) {
      console.error('Error loading conversation:', e);
    }
  }

  async function loadMessages(convId: string) {
    const { data } = await (supabase as any)
      .from('messages')
      .select('*')
      .eq('conversation_id', convId)
      .order('created_at', { ascending: true })
      .limit(100);

    if (data) {
      messages = data;
      renderMessages();
    }
  }

  function subscribeToMessages(convId: string) {
    if (realtimeChannel) {
      supabase.removeChannel(realtimeChannel);
    }

    realtimeChannel = supabase
      .channel(`messages:${convId}`)
      .on('postgres_changes', {
        event: 'INSERT',
        schema: 'public',
        table: 'messages',
        filter: `conversation_id=eq.${convId}`,
      }, (payload) => {
        const msg = payload.new as Message;
        if (msg.sender_id !== userId) {
          messages.push(msg);
          renderMessages();
        }
      })
      .subscribe();
  }

  function renderMessages() {
    if (messages.length === 0) {
      messagesContainer.innerHTML = `
        <div class="messages-empty">
          <div class="messages-empty-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
            </svg>
          </div>
          <p>No hay mensajes</p>
          <span>¡Envía el primer mensaje!</span>
        </div>
      `;
      return;
    }

    let lastDate = '';
    messagesContainer.innerHTML = messages.map(msg => {
      const msgDate = new Date(msg.created_at).toLocaleDateString('es');
      let dateSep = '';
      if (msgDate !== lastDate) {
        lastDate = msgDate;
        dateSep = `<div class="date-sep"><span>${msgDate}</span></div>`;
      }

      const isMine = msg.sender_id === userId;
      const time = new Date(msg.created_at).toLocaleTimeString('es', { hour: '2-digit', minute: '2-digit' });
      const senderName = currentChat?.name || 'Usuario';
      const senderAvatar = currentChat?.avatar || '/images/default-avatar.svg';

      return `${dateSep}
        <div class="msg ${isMine ? 'sent' : 'received'}">
          ${!isMine ? `<img src="${senderAvatar}" alt="" class="msg-avatar" onerror="this.src='/images/default-avatar.svg'" />` : ''}
          <div class="msg-body">
            ${!isMine ? `<span class="msg-sender">${senderName}</span>` : ''}
            <div class="msg-bubble">
              <p>${escapeHtml(msg.content)}</p>
              <div class="msg-footer">
                <span class="msg-time">${time}</span>
                ${isMine ? `<svg class="msg-check read" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12"></polyline></svg>` : ''}
              </div>
            </div>
          </div>
        </div>
      `;
    }).join('');

    messagesContainer.scrollTop = messagesContainer.scrollHeight;
  }

  async function sendMessage(e: Event) {
    e.preventDefault();
    const content = messageInput.value.trim();
    if (!content || !conversationId || !userId) return;

    messageInput.value = '';
    sendBtn.disabled = true;

    const { data: msg, error } = await (supabase as any)
      .from('messages')
      .insert({
        conversation_id: conversationId,
        sender_id: userId,
        content,
      })
      .select()
      .single();

    if (error) {
      console.error('Send error:', error);
      messageInput.value = content;
      return;
    }

    if (msg) {
      messages.push(msg);
      renderMessages();
    }
  }

  function escapeHtml(text: string): string {
    const div = document.createElement('div');
    div.textContent = text;
    return div.innerHTML;
  }
</script>
