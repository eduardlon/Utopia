---
import AppLayout from '../layouts/AppLayout.astro';
---

<AppLayout title="Mensajes">
  <div class="messages-app">
    <!-- Conversations List View -->
    <div class="conversations-view" id="conversations-view">
      <!-- Header -->
      <div class="conv-header">
        <h1>Mensajes</h1>
        <div class="conv-header-actions">
          <button class="conv-icon-btn" id="search-btn" title="Buscar">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="11" cy="11" r="8"></circle>
              <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
            </svg>
          </button>
          <button class="conv-icon-btn" id="new-chat-btn" title="Nueva conversación">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <line x1="12" y1="5" x2="12" y2="19"></line>
              <line x1="5" y1="12" x2="19" y2="12"></line>
            </svg>
          </button>
        </div>
      </div>

      <!-- Search Bar (hidden by default) -->
      <div class="search-container" id="search-container" hidden>
        <div class="search-box">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="11" cy="11" r="8"></circle>
            <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
          </svg>
          <input type="text" placeholder="Buscar conversaciones..." id="search-input" />
          <button class="search-clear" id="search-clear">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <line x1="18" y1="6" x2="6" y2="18"></line>
              <line x1="6" y1="6" x2="18" y2="18"></line>
            </svg>
          </button>
        </div>
      </div>

      <!-- Tabs -->
      <div class="conv-tabs">
        <button class="conv-tab active" data-tab="all">Todos</button>
        <button class="conv-tab" data-tab="unread">
          No leídos
          <span class="tab-badge" id="unread-badge" hidden>0</span>
        </button>
        <button class="conv-tab" data-tab="online">En línea</button>
      </div>

      <!-- Conversations List -->
      <div class="conv-list" id="conv-list">
        <!-- Loading Skeleton -->
        <div class="conv-skeleton" id="conv-skeleton">
          {[1, 2, 3, 4, 5, 6, 7, 8].map(() => (
            <div class="skeleton-item">
              <div class="skeleton-avatar"></div>
              <div class="skeleton-content">
                <div class="skeleton-row">
                  <div class="skeleton-name"></div>
                  <div class="skeleton-time"></div>
                </div>
                <div class="skeleton-message"></div>
              </div>
            </div>
          ))}
        </div>
      </div>

      <!-- Empty State -->
      <div class="empty-state" id="empty-state" hidden>
        <div class="empty-icon">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
          </svg>
        </div>
        <h3>Sin mensajes</h3>
        <p>No tienes conversaciones aún</p>
        <button class="start-btn" id="start-btn">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="12" y1="5" x2="12" y2="19"></line>
            <line x1="5" y1="12" x2="19" y2="12"></line>
          </svg>
          Iniciar chat
        </button>
      </div>
    </div>

    <!-- Chat View (hidden by default) -->
    <div class="chat-view" id="chat-view" hidden>
      <!-- Chat Header -->
      <div class="chat-header">
        <button class="back-btn" id="back-btn">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M19 12H5M12 19l-7-7 7-7"></path>
          </svg>
        </button>
        <div class="chat-avatar-wrap">
          <img src="/images/default-avatar.svg" alt="" class="chat-avatar" id="chat-avatar" />
          <span class="chat-status-dot" id="chat-status-dot"></span>
        </div>
        <div class="chat-user-info">
          <span class="chat-name" id="chat-name">Usuario</span>
          <span class="chat-status" id="chat-status">En línea</span>
        </div>
        <a href="#" class="chat-menu-btn" id="chat-profile">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="1"></circle>
            <circle cx="19" cy="12" r="1"></circle>
            <circle cx="5" cy="12" r="1"></circle>
          </svg>
        </a>
      </div>

      <!-- Messages Container -->
      <div class="messages-container" id="messages-container">
        <div class="messages-empty" id="messages-empty">
          <div class="messages-empty-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
            </svg>
          </div>
          <p>No hay mensajes</p>
          <span>¡Envía el primer mensaje!</span>
        </div>
      </div>

      <!-- Message Input -->
      <form class="message-input-area" id="message-form">
        <input type="text" placeholder="Escribe un mensaje..." id="message-input" autocomplete="off" />
        <button type="submit" id="send-btn" disabled>
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="22" y1="2" x2="11" y2="13"></line>
            <polygon points="22 2 15 22 11 13 2 9 22 2"></polygon>
          </svg>
        </button>
      </form>
    </div>

    <!-- New Chat Modal -->
    <div class="modal-overlay" id="new-chat-modal" hidden>
      <div class="modal-content glass">
        <div class="modal-header">
          <h3>Nueva conversación</h3>
          <button class="modal-close" id="modal-close">✕</button>
        </div>
        <div class="modal-search">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="11" cy="11" r="8"></circle>
            <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
          </svg>
          <input type="text" placeholder="Buscar amigo..." id="modal-search-input" />
        </div>
        <div class="modal-list" id="modal-list">
          <div class="modal-loading">
            <div class="spinner"></div>
            <span>Cargando...</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</AppLayout>

<style>
  /* Main Container */
  .messages-app {
    min-height: calc(100vh - 64px);
    background: #0a0a0a;
    padding-bottom: 70px;
  }

  /* Conversations View */
  .conversations-view {
    display: flex;
    flex-direction: column;
    height: calc(100vh - 64px);
  }

  /* Header */
  .conv-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem 1.25rem;
    background: rgba(0, 0, 0, 0.6);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    position: sticky;
    top: 0;
    z-index: 10;
  }

  .conv-header h1 {
    font-size: 1.5rem;
    font-weight: 700;
    color: white;
    margin: 0;
  }

  .conv-header-actions {
    display: flex;
    gap: 0.5rem;
  }

  .conv-icon-btn {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 50%;
    color: rgba(255, 255, 255, 0.7);
    cursor: pointer;
    transition: all 0.2s;
  }

  .conv-icon-btn:hover {
    background: rgba(255, 255, 255, 0.1);
    color: white;
  }

  .conv-icon-btn svg {
    width: 20px;
    height: 20px;
  }

  /* Search Container */
  .search-container {
    padding: 0.75rem 1rem;
    background: rgba(0, 0, 0, 0.4);
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    animation: slideDown 0.2s ease;
  }

  @keyframes slideDown {
    from { opacity: 0; transform: translateY(-10px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .search-box {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1rem;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 1.5rem;
  }

  .search-box svg {
    width: 18px;
    height: 18px;
    color: rgba(255, 255, 255, 0.4);
    flex-shrink: 0;
  }

  .search-box input {
    flex: 1;
    background: none;
    border: none;
    color: white;
    font-size: 0.95rem;
    outline: none;
  }

  .search-box input::placeholder {
    color: rgba(255, 255, 255, 0.4);
  }

  .search-clear {
    width: 24px;
    height: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.1);
    border: none;
    border-radius: 50%;
    color: rgba(255, 255, 255, 0.6);
    cursor: pointer;
  }

  .search-clear svg {
    width: 14px;
    height: 14px;
  }

  /* Tabs */
  .conv-tabs {
    display: flex;
    gap: 0.25rem;
    padding: 0.5rem 1rem;
    background: rgba(0, 0, 0, 0.3);
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
  }

  .conv-tab {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.5rem 1rem;
    background: transparent;
    border: none;
    border-radius: 1.5rem;
    color: rgba(255, 255, 255, 0.5);
    font-size: 0.875rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s;
  }

  .conv-tab:hover {
    color: rgba(255, 255, 255, 0.7);
  }

  .conv-tab.active {
    background: rgba(34, 197, 94, 0.15);
    color: #22c55e;
  }

  .tab-badge {
    background: #22c55e;
    color: white;
    font-size: 0.7rem;
    font-weight: 600;
    padding: 0.125rem 0.5rem;
    border-radius: 1rem;
    min-width: 18px;
    text-align: center;
  }

  /* Conversations List */
  .conv-list {
    flex: 1;
    overflow-y: auto;
  }

  .conv-item {
    display: flex;
    align-items: center;
    gap: 0.875rem;
    padding: 0.875rem 1.25rem;
    cursor: pointer;
    transition: background 0.15s;
    border-bottom: 1px solid rgba(255, 255, 255, 0.03);
  }

  .conv-item:hover {
    background: rgba(255, 255, 255, 0.03);
  }

  .conv-item:active {
    background: rgba(255, 255, 255, 0.05);
  }

  .conv-avatar-wrap {
    position: relative;
    flex-shrink: 0;
  }

  .conv-avatar {
    width: 52px;
    height: 52px;
    border-radius: 50%;
    object-fit: cover;
    border: 2px solid rgba(34, 197, 94, 0.15);
  }

  .conv-status-dot {
    position: absolute;
    bottom: 2px;
    right: 2px;
    width: 14px;
    height: 14px;
    border-radius: 50%;
    border: 3px solid #0a0a0a;
  }

  .conv-status-dot.online {
    background: #22c55e;
    box-shadow: 0 0 8px rgba(34, 197, 94, 0.5);
  }

  .conv-status-dot.away {
    background: #f59e0b;
  }

  .conv-status-dot.offline {
    background: rgba(255, 255, 255, 0.3);
  }

  .conv-content {
    flex: 1;
    min-width: 0;
  }

  .conv-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.25rem;
  }

  .conv-name {
    font-size: 1rem;
    font-weight: 600;
    color: white;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .conv-time {
    font-size: 0.75rem;
    color: rgba(255, 255, 255, 0.4);
    flex-shrink: 0;
    margin-left: 0.5rem;
  }

  .conv-preview {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .conv-last-msg {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.5);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    flex: 1;
  }

  .conv-unread {
    background: #22c55e;
    color: white;
    font-size: 0.7rem;
    font-weight: 600;
    min-width: 20px;
    height: 20px;
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0 6px;
    flex-shrink: 0;
  }

  .conv-check {
    width: 16px;
    height: 16px;
    color: #22c55e;
    flex-shrink: 0;
  }

  /* Empty State */
  .empty-state {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 3rem 2rem;
    text-align: center;
  }

  .empty-icon {
    margin-bottom: 1.5rem;
    color: rgba(34, 197, 94, 0.3);
  }

  .empty-icon svg {
    width: 64px;
    height: 64px;
  }

  .empty-state h3 {
    font-size: 1.25rem;
    font-weight: 600;
    color: white;
    margin: 0 0 0.5rem 0;
  }

  .empty-state p {
    font-size: 0.95rem;
    color: rgba(255, 255, 255, 0.5);
    margin: 0 0 1.5rem 0;
  }

  .start-btn {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.875rem 1.5rem;
    background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
    border: none;
    border-radius: 2rem;
    color: white;
    font-size: 0.95rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s;
  }

  .start-btn:hover {
    transform: scale(1.02);
    box-shadow: 0 4px 15px rgba(34, 197, 94, 0.3);
  }

  .start-btn svg {
    width: 18px;
    height: 18px;
  }

  /* Skeleton */
  .conv-skeleton {
    display: flex;
    flex-direction: column;
  }

  .skeleton-item {
    display: flex;
    align-items: center;
    gap: 0.875rem;
    padding: 0.875rem 1.25rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.03);
  }

  .skeleton-avatar {
    width: 52px;
    height: 52px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.05);
    animation: shimmer 1.5s infinite;
  }

  .skeleton-content {
    flex: 1;
  }

  .skeleton-row {
    display: flex;
    justify-content: space-between;
    margin-bottom: 0.5rem;
  }

  .skeleton-name {
    height: 14px;
    width: 120px;
    border-radius: 7px;
    background: rgba(255, 255, 255, 0.05);
    animation: shimmer 1.5s infinite;
  }

  .skeleton-time {
    height: 10px;
    width: 40px;
    border-radius: 5px;
    background: rgba(255, 255, 255, 0.05);
    animation: shimmer 1.5s infinite 0.1s;
  }

  .skeleton-message {
    height: 12px;
    width: 180px;
    border-radius: 6px;
    background: rgba(255, 255, 255, 0.05);
    animation: shimmer 1.5s infinite 0.2s;
  }

  @keyframes shimmer {
    0%, 100% { opacity: 0.3; }
    50% { opacity: 0.6; }
  }

  /* Chat View */
  .chat-view {
    display: flex;
    flex-direction: column;
    height: calc(100vh - 64px);
    background: linear-gradient(180deg, #0a0a0a 0%, #0f0f0f 100%);
    animation: slideIn 0.25s ease;
  }

  @keyframes slideIn {
    from { transform: translateX(100%); }
    to { transform: translateX(0); }
  }

  .chat-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.875rem 1rem;
    background: rgba(0, 0, 0, 0.6);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
  }

  .back-btn {
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.05);
    border: none;
    border-radius: 50%;
    color: rgba(255, 255, 255, 0.7);
    cursor: pointer;
    transition: all 0.2s;
  }

  .back-btn:hover {
    background: rgba(255, 255, 255, 0.1);
    color: white;
  }

  .back-btn svg {
    width: 20px;
    height: 20px;
  }

  .chat-avatar-wrap {
    position: relative;
    flex-shrink: 0;
  }

  .chat-avatar {
    width: 42px;
    height: 42px;
    border-radius: 50%;
    object-fit: cover;
    border: 2px solid rgba(34, 197, 94, 0.25);
  }

  .chat-status-dot {
    position: absolute;
    bottom: 0;
    right: 0;
    width: 12px;
    height: 12px;
    border-radius: 50%;
    border: 2px solid #0a0a0a;
  }

  .chat-user-info {
    flex: 1;
    min-width: 0;
  }

  .chat-name {
    display: block;
    font-size: 1rem;
    font-weight: 600;
    color: white;
    margin-bottom: 0.125rem;
  }

  .chat-status {
    font-size: 0.75rem;
    color: #22c55e;
  }

  .chat-menu-btn {
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 50%;
    color: rgba(255, 255, 255, 0.7);
  }

  .chat-menu-btn svg {
    width: 18px;
    height: 18px;
  }

  /* Messages Container */
  .messages-container {
    flex: 1;
    overflow-y: auto;
    padding: 1rem;
    display: flex;
    flex-direction: column;
    gap: 0.375rem;
  }

  .messages-empty {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: rgba(255, 255, 255, 0.4);
  }

  .messages-empty-icon {
    margin-bottom: 1rem;
    color: rgba(34, 197, 94, 0.3);
  }

  .messages-empty-icon svg {
    width: 48px;
    height: 48px;
  }

  .messages-empty p {
    margin: 0 0 0.25rem 0;
    font-weight: 500;
    color: rgba(255, 255, 255, 0.6);
  }

  .messages-empty span {
    font-size: 0.875rem;
  }

  /* Date Separator */
  .date-sep {
    text-align: center;
    margin: 0.75rem 0;
  }

  .date-sep span {
    font-size: 0.7rem;
    color: rgba(255, 255, 255, 0.35);
    background: rgba(255, 255, 255, 0.05);
    padding: 0.25rem 0.75rem;
    border-radius: 1rem;
  }

  /* Message */
  .msg {
    display: flex;
    gap: 0.5rem;
    max-width: 85%;
    animation: msgIn 0.2s ease;
  }

  @keyframes msgIn {
    from { opacity: 0; transform: translateY(8px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .msg.sent {
    align-self: flex-end;
    flex-direction: row-reverse;
  }

  .msg.received {
    align-self: flex-start;
  }

  .msg-avatar {
    width: 28px;
    height: 28px;
    border-radius: 50%;
    object-fit: cover;
    border: 1.5px solid rgba(34, 197, 94, 0.2);
    flex-shrink: 0;
    align-self: flex-end;
  }

  .msg.sent .msg-avatar {
    display: none;
  }

  .msg-body {
    display: flex;
    flex-direction: column;
    min-width: 0;
  }

  .msg-sender {
    font-size: 0.7rem;
    color: #22c55e;
    font-weight: 500;
    margin-bottom: 0.2rem;
    padding-left: 0.25rem;
  }

  .msg.sent .msg-sender {
    display: none;
  }

  .msg-bubble {
    padding: 0.75rem 1rem;
    border-radius: 1.25rem;
    max-width: 100%;
    word-wrap: break-word;
  }

  .msg.sent .msg-bubble {
    background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
    color: white;
    border-bottom-right-radius: 0.25rem;
  }

  .msg.received .msg-bubble {
    background: rgba(255, 255, 255, 0.08);
    color: white;
    border-bottom-left-radius: 0.25rem;
  }

  .msg-bubble p {
    margin: 0;
    font-size: 0.95rem;
    line-height: 1.45;
  }

  .msg-footer {
    display: flex;
    align-items: center;
    justify-content: flex-end;
    gap: 0.25rem;
    margin-top: 0.25rem;
  }

  .msg.received .msg-footer {
    justify-content: flex-start;
  }

  .msg-time {
    font-size: 0.65rem;
    color: rgba(255, 255, 255, 0.5);
  }

  .msg-check {
    width: 14px;
    height: 14px;
    color: rgba(255, 255, 255, 0.6);
  }

  .msg-check.read {
    color: #22c55e;
  }

  /* Message Input */
  .message-input-area {
    display: flex;
    gap: 0.75rem;
    padding: 0.875rem 1rem;
    background: rgba(0, 0, 0, 0.6);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border-top: 1px solid rgba(255, 255, 255, 0.05);
  }

  .message-input-area input {
    flex: 1;
    padding: 0.875rem 1rem;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 1.5rem;
    color: white;
    font-size: 1rem;
    outline: none;
    transition: border-color 0.2s;
  }

  .message-input-area input::placeholder {
    color: rgba(255, 255, 255, 0.4);
  }

  .message-input-area input:focus {
    border-color: rgba(34, 197, 94, 0.3);
  }

