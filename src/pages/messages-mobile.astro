    animation: spin 0.7s linear infinite;
  }

  @keyframes spin {
    to { transform: rotate(360deg); }
  }

  /* Scrollbar */
  .chat-messages::-webkit-scrollbar,
  .new-chat-list::-webkit-scrollbar {
    width: 4px;
